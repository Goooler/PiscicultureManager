<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/card_img"
        android:src="@mipmap/default_avatar"
        android:layout_width="@dimen/global_60"
        android:layout_height="@dimen/global_60"
        android:layout_marginLeft="@dimen/global_10"
        android:layout_marginTop="@dimen/global_15"
        android:layout_marginBottom="@dimen/global_15" />

    <TextView
        android:id="@+id/card_txt"
        android:text="@string/default_test"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/global_60"
        android:layout_marginLeft="@dimen/global_80"
        android:layout_marginTop="@dimen/global_10"
        android:layout_marginBottom="@dimen/global_10"
        android:gravity="center_vertical"
        android:textSize="@dimen/global_25" />

</android.support.v7.widget.CardView>